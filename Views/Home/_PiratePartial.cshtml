@model Pirate

<form action="addPirate" method="post">
    <div class="form-group">
        <label for="Name">Pirate Name</label>
        <input asp-for="Name" class="form-control">
        <span asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label for="Position">Position</label>
        <input asp-for="Position" class="form-control">
        <span asp-validation-for="Position"></span>
    </div>
    <div class="form-group">
        <label for="ShipId">Ship Name</label>
        <select asp-for="ShipId" class="form-control">
            @{
                foreach(Ship s in ViewBag.AllShips)
                {
                    <option value="@s.ShipId">@s.ShipName</option>
                }
            }
        </select>
        <span asp-validation-for="ShipId"></span>
    </div>
    <span asp-validation-for="ShipId"></span>
    <input type="submit" value="Add Pirate" class="btn btn-danger">
</form>